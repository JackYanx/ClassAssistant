<!-- 形状 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <solid android:color="#ffffff" />
    <!-- 边框 -->
    <stroke
        android:width="1dip"
        android:color="#ffffff" />
    <!-- 内填充颜色 -->
    <padding
        android:bottom="3dp"
        android:left="4dp"
        android:right="4dp"
        android:top="3dp" />
    <!-- 圆角 -->
    <corners android:radius="3dp" />

</shape>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- This is the main color -->
    <item>
        <shape>
            <!--    边框颜色 -->
            <solid android:color="#999999"/>
        </shape>
    </item>
    <!-- 给View的上 左  右设置2dp的边框 -->
    <item android:top="2dp" android:left="2dp" android:right="2dp">
        <shape>
            <!--     View填充颜色 -->
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>